<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xi="http://www.w3.org/2001/XInclude"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

  <application>
    <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

    <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>en</supported-locale>
      <supported-locale>es</supported-locale>
    </locale-config>

    <resource-bundle>
      <base-name>org.msg.i18n.directive</base-name>
      <var>dir</var>
    </resource-bundle>
    <resource-bundle>
      <base-name>org.msg.i18n.organization</base-name>
      <var>org</var>
    </resource-bundle>
    <resource-bundle>
      <base-name>org.msg.i18n.login</base-name>
      <var>login</var>
    </resource-bundle>
    <resource-bundle>
      <base-name>org.msg.i18n.header</base-name>
      <var>h</var>
    </resource-bundle>

  </application>


  <navigation-rule>
    <from-view-id>/secure/organization-list.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>edit-organization</from-outcome>
      <to-view-id>/secure/edit-organization.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/secure/organization-list.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>create-organization</from-outcome>
      <to-view-id>/secure/edit-organization.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/secure/directive-list.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>edit-directive</from-outcome>
      <to-view-id>/secure/edit-directive.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/secure/directive-list.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>create-directive</from-outcome>
      <to-view-id>/secure/edit-directive.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/secure/edit-directive.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>directive-list</from-outcome>
      <to-view-id>/secure/directive-list.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/secure/directive-list.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>directive-list</from-outcome>
      <to-view-id>/secure/directive-list.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>


</faces-config>
