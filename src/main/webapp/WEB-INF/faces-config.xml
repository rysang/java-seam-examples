<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xi="http://www.w3.org/2001/XInclude"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

  <application>
    <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

    <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>en</supported-locale>
      <supported-locale>es</supported-locale>
    </locale-config>

    <resource-bundle>
      <base-name>org.msg.i18n.login</base-name>
      <var>login</var>
    </resource-bundle>
    <resource-bundle>
      <base-name>org.msg.i18n.auktion</base-name>
      <var>auktion</var>
    </resource-bundle>
  </application>

  <navigation-rule>
    <from-view-id>/secure/home.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>create-role</from-outcome>
      <to-view-id>/secure/create-role.xhtml</to-view-id>
      <redirect include-view-params="true" />
    </navigation-case>
  </navigation-rule>


  <navigation-rule>
    <from-view-id>/secure/home.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>create-user</from-outcome>
      <to-view-id>/secure/create-user.xhtml</to-view-id>
      <redirect include-view-params="true" />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/secure/home.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>edit-user</from-outcome>
      <to-view-id>/secure/edit-user.xhtml</to-view-id>
      <redirect include-view-params="true" />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <navigation-case>
      <from-outcome>home-secure</from-outcome>
      <to-view-id>/secure/home.xhtml</to-view-id>
      <redirect include-view-params="true" />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <navigation-case>
      <from-outcome>view-complaint</from-outcome>
      <to-view-id>/secure/view-complaint.xhtml</to-view-id>
      <redirect include-view-params="true" />
    </navigation-case>
  </navigation-rule>

</faces-config>
