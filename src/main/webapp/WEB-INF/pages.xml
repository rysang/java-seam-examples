<pages xmlns="http://jboss.com/progucts/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
	no-conversation-view-id="/index.xhtml" login-view-id="/login.xhtml">


	<page view-id="/index.xhtml" login-required="true">
		<navigation>
			<rule if-outcome="CREATE_USER">
				<redirect view-id="/createUser.xhtml" />
			</rule>
			<rule if-outcome="LIST_USERS">
				<redirect view-id="/listUsers.xhtml" />
			</rule>
		</navigation>
	</page>

	<page view-id="/createUser.xhtml" login-required="true">
		<navigation>
			<rule if-outcome="INDEX">
				<redirect view-id="/index.xhtml" />
			</rule>
		</navigation>
	</page>

	<page view-id="/login.xhtml">
		<navigation>
			<rule if-outcome="INDEX">
				<redirect view-id="/index.xhtml" />
			</rule>
		</navigation>
	</page>

	<page view-id="/editUser.xhtml" login-required="true">
		<navigation>
			<rule if-outcome="INDEX">
				<redirect view-id="/index.xhtml" />
			</rule>
		</navigation>
	</page>


	<page view-id="/listUsers.xhtml" login-required="true">
		<navigation>
			<rule if-outcome="EDIT_USER">
				<redirect view-id="/editUser.xhtml" />
			</rule>
			<rule if-outcome="CREATE_USER">
				<redirect view-id="/createUser.xhtml" />
			</rule>
		</navigation>
	</page>

	<exception class="java.lang.Exception">
		<end-conversation />
		<redirect view-id="/index.jsp">
			<message>You are not authorized</message>
		</redirect>
	</exception>
</pages>